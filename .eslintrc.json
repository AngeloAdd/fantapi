{
  "root": true,
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:security/recommended",
    "plugin:node/recommended",
    "airbnb-base"
  ],
  "overrides": [
    {
      "files": [
        "**.test.js"
      ],
      "plugins": [
        "jest"
      ],
      "extends": [
        "plugin:jest/recommended"
      ],
      "rules": {
        "no-return-await": "off",
        "jest/prefer-expect-assertions": "off",
        "jest/valid-expect": "error",
        "node/no-unpublished-require": [
          "error",
          {
            "allowModules": [
              "nock"
            ]
          }
        ]
      }
    },
    {
      "files": ["api-errors.js"],
      "rules": {
        "max-classes-per-file": "off"
      }
    },
    {
      "files": ["api-errors.js"],
      "rules": {
        "max-classes-per-file": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "rules": {
    "import/extensions": "off",
    "object-curly-spacing": "off"
  }
}
